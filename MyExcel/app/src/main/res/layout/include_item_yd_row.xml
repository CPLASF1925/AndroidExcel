<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="@dimen/dp_100"
        android:layout_height="@dimen/dp_50">

        <com.myexcel.view.MyProgress
            android:id="@+id/mp_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:mpLayoutHeight="@dimen/dp_50"
            app:mpBackGroundColor="@color/white"
            app:mpFillGroundColor="@color/main_color"
            app:mpLayoutWidth="@dimen/dp_100" />

        <View
            android:layout_width="@dimen/px_1"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@color/c_line"></View>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_1"
            android:layout_alignParentBottom="true"
            android:background="@color/c_line"></View>

    </RelativeLayout>


</android.support.constraint.ConstraintLayout>